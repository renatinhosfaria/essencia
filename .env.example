# EssÃªncia Platform - Environment Variables
# Copy this file to .env and adjust as needed

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=essencia
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/essencia

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible storage)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=essencia-media
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Service URLs (for docker-compose internal network)
CORE_SERVICE_URL=http://core:3010
ENGAGEMENT_SERVICE_URL=http://engagement:3011

# Ports
GATEWAY_PORT=3000
CORE_PORT=3010
ENGAGEMENT_PORT=3011
LANDING_PORT=3001
ADMIN_PORT=3002

# API URL (for frontend apps)
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
