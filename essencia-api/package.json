{
  "name": "essencia-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run build:all",
    "build:gateway": "nest build gateway",
    "build:core": "nest build core",
    "build:engagement": "nest build engagement",
    "build:all": "npm run build:gateway && npm run build:core && npm run build:engagement",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start gateway",
    "start:dev": "nest start gateway --watch",
    "start:debug": "nest start gateway --debug --watch",
    "start:prod": "node dist/apps/gateway/main",
    "start:gateway": "nest start gateway",
    "start:gateway:dev": "nest start gateway --watch",
    "start:gateway:debug": "nest start gateway --debug --watch",
    "start:gateway:prod": "node dist/apps/gateway/main",
    "start:core": "nest start core",
    "start:core:dev": "nest start core --watch",
    "start:core:debug": "nest start core --debug --watch",
    "start:core:prod": "node dist/apps/core/main",
    "start:engagement": "nest start engagement",
    "start:engagement:dev": "nest start engagement --watch",
    "start:engagement:debug": "nest start engagement --debug --watch",
    "start:engagement:prod": "node dist/apps/engagement/main",
    "start:all": "concurrently \"npm run start:gateway:dev\" \"npm run start:core:dev\" \"npm run start:engagement:dev\"",
    "lint": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "db:push": "drizzle-kit push",
    "db:push:force": "drizzle-kit push --force",
    "db:generate": "drizzle-kit generate",
    "db:rls": "node ./scripts/apply-rls.mjs",
    "db:setup": "npm run db:push:force && npm run db:rls",
    "db:seed": "node ./scripts/seed-first-tenant.mjs",
    "db:seed:demo": "node ./scripts/seed-demo.mjs",
    "db:seed:roles": "node ./scripts/seed-roles.mjs",
    "db:verify-rls": "node ./scripts/verify-rls.mjs",
    "storage:setup": "node ./scripts/setup-minio.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/lib-storage": "^3.948.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/platform-socket.io": "^11.1.9",
    "@nestjs/websockets": "^11.1.9",
    "@socket.io/redis-adapter": "^8.3.0",
    "argon2": "^0.44.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "concurrently": "^9.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "expo-server-sdk": "^3.13.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "socket.io-redis": "^5.4.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "roots": [
      "<rootDir>/apps",
      "<rootDir>/libs"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.(t|j)s",
      "libs/**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
