# Runtime
NODE_ENV=development

# Service Ports
GATEWAY_PORT=3000
CORE_PORT=3001
ENGAGEMENT_PORT=3002

# Database (app runtime)
DATABASE_URL=postgresql://essencia_app:essencia_app@localhost:5433/essencia

# Database (migrations/admin tasks)
DATABASE_MIGRATIONS_URL=postgresql://essencia_migrations:essencia_migrations@localhost:5433/essencia

# Auth
# Use a long random value in real environments.
JWT_SECRET=change-me-please-use-a-long-random-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379

# S3/MinIO Storage
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=essencia-media
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_PUBLIC_URL=http://localhost:9000/essencia-media

# Service URLs (for Gateway)
CORE_SERVICE_URL=http://localhost:3001
ENGAGEMENT_SERVICE_URL=http://localhost:3002
